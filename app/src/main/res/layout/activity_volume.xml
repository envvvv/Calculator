<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".turn"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="立方千米:"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/km3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:hint="请输入体积"
        android:textSize="40dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="立方米:"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/m3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入体积"
        android:textSize="40dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="立方厘米:"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/cm3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入体积"
        android:textSize="40dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="立方毫米:"
        android:textSize="40dp"/>

    <EditText
        android:id="@+id/mm3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入长体积"
        android:textSize="40dp"/>



    <Button
        android:id="@+id/v_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textSize="40dp"/>
    <Button
        android:id="@+id/v_clear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="清除"
        android:textSize="40dp"/>

    <Button
        android:id="@+id/v_turn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回"
        android:textSize="40dp"/>

</LinearLayout>